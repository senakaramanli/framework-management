{
  "name": "framework-manager",
  "version": "1.0.0",
  "description": "Pixel-perfect UI project for framework management",
  "main": "index.html",
  "scripts": {
    "dev": "concurrently \"npm run sass:watch\" \"npm run serve\"",
    "build": "npm run sass:build && npm run css:minify",
    "sass:watch": "sass src/scss/main.scss public/main.css --watch",
    "sass:build": "sass src/scss/main.scss public/main.css",
    "css:minify": "postcss public/main.css -o public/main.min.css",
    "serve": "live-server public --port=3000 --open=/index.html"
  },
  "devDependencies": {
    "bootstrap": "^5.3.2",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "sass": "^1.69.5"
  },
  "keywords": ["bootstrap", "sass", "vanilla-js", "ui"],
  "author": "",
  "license": "MIT"
}
